# ===========================================
# SoilGuard Backend Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ==== DATABASE (Supabase) ====
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key
DATABASE_URL=postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres

# ==== AI SERVICES ====
# Google Gemini API (for text generation)
GEMINI_API_KEY=your-gemini-api-key

# Anthropic Claude API (for reasoning tasks)
ANTHROPIC_API_KEY=sk-ant-api-your-claude-api-key

# ==== GOOGLE EARTH ENGINE (Satellite Data) ====
GOOGLE_EARTH_ENGINE_SERVICE_ACCOUNT=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_EARTH_ENGINE_PROJECT_ID=your-gee-project-id
GOOGLE_EARTH_ENGINE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"

# ==== WEATHER API ====
OPENWEATHER_API_KEY=your-openweather-api-key

# ==== MARKET DATA ====
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key

# ==== OPTIONAL: ERROR TRACKING ====
# Sentry DSN (leave empty to disable)
SENTRY_DSN=

# ==== APPLICATION SETTINGS ====
DEBUG=true
LOG_LEVEL=INFO
ENVIRONMENT=development

# Rate limiting (requests per minute per IP)
RATE_LIMIT_PER_MINUTE=30

# Enable system metrics endpoint
ENABLE_METRICS=true


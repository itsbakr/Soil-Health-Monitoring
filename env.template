# =============================================================================
# LARMMS - Soil Health Monitoring Platform
# Environment Variables Template
# =============================================================================
# 
# Copy this file to .env and fill in your actual API keys and configuration
# Never commit .env files to version control!
#

# =============================================================================
# SUPABASE CONFIGURATION (Required)
# =============================================================================
# Get these from: https://supabase.com/dashboard/project/[your-project]/settings/api
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Database URL (automatically generated by Supabase)
DATABASE_URL=postgresql://[user]:[password]@[host]:[port]/[database]

# =============================================================================
# GOOGLE EARTH ENGINE (Optional - will use demo data if not provided)
# =============================================================================
# Get these from: https://console.cloud.google.com/
GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id

# Earth Engine requires authentication via command line:
# Run: earthengine authenticate
# Or upload service account key and set:
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# =============================================================================
# WEATHER API (Optional - will use demo data if not provided)
# =============================================================================
# Get from: https://openweathermap.org/api
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key_here

# =============================================================================
# CROP PRICE APIS (Optional - will use demo data if not provided)
# =============================================================================
# Get from: https://commodities-api.com/
COMMODITIES_API_KEY=your_commodities_api_key_here

# Get from: https://www.quandl.com/tools/api
QUANDL_API_KEY=your_quandl_api_key_here

# Get from: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# =============================================================================
# AI APIS - HYBRID STRATEGY (Claude + Gemini)
# =============================================================================
# STRATEGY: Use Claude for reasoning tasks, Gemini for text generation
# Fallback: Rule-based analysis if APIs unavailable

# Google Gemini API (Free tier - 1,500 requests/day)
# Used for: Text generation, basic soil health reports
# Get from: https://ai.google.dev/pricing
GOOGLE_GEMINI_API_KEY=your_google_gemini_api_key_here

# Anthropic Claude API (Paid - RECOMMENDED for advanced analysis)
# Used for: Economic reasoning, ROI analysis, decision making
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_claude_api_key_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Environment (development, staging, production)
NODE_ENV=development

# Backend API URL (for frontend)
NEXT_PUBLIC_API_URL=http://localhost:8000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate a random secret key for JWT tokens (if needed)
SECRET_KEY=your_super_secret_key_here_minimum_32_characters

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# =============================================================================
# OPTIONAL: DEVELOPMENT SETTINGS
# =============================================================================
# Set to 'true' to enable debug mode
DEBUG=false

# Set to 'true' to enable verbose logging
VERBOSE_LOGGING=false

# Cache expiration times (in seconds)
SATELLITE_CACHE_EXPIRY=3600
WEATHER_CACHE_EXPIRY=1800
PRICE_CACHE_EXPIRY=7200 